      <!------------------------------------- MATCHING ----------------------------------------------------->

      <div class="row">
          <div class="col-sm-offset-1 col-sm-10 block1">
              <div class="row">
                  <section class="col-sm-6 col-xs-12 backWhite margeMobile secPad2 padShow2">
                      <h3 class="title">Mes offres</h3>
                      <h4 class="underTitle">Ce que je propose...</h4>
                      <div class="padShow">
                          {% if offers == NULL %}
                          <p>Absence d'Offres</p>
                          {% else %}
                          {% for offer in offers %}
                          <ul>
                              <li>
                                  <div class="row">
                                      <a href="{{ path('actor_showOffer',{'id' : offer.id}) }}" id="lienListe">
                                          <img src="{{ app.request.basepath }}/uploads/{{ offer.imageOffer }}" alt="photo_offre" class=" col-xs-2">
                                          <div class="col-xs-8">
                                              <span>{{ offer.title }}</span>
                                              <p>{{ offer.description }}</p>
                                          </div>
                                      </a>
                                      <div class="col-xs-1">
                                          <a href="{{ path('actor_editOffer', { 'id': offer.id }) }}"><span class="glyphicon glyphicon-pencil btn-lg"></span ></a>
                                          <a href="{{ path('actor_deleteOffer',{'id' : offer.id}) }}"><span class="glyphicon glyphicon-remove btn-lg"></span ></a>

                                      </div>
                                  </div>
                              </li>
                              <hr>
                              {% endfor %}
                              {% endif %}
                          </ul>
                      </div>
                      <div class="row">
                          <a href="{{ path('actor_newOffer') }}" class="col-xs-offset-11"> <span class="glyphicon glyphicon-plus btn-lg"></span ></a>
