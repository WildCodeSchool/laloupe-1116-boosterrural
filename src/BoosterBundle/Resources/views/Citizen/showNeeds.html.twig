{% extends 'base.html.twig' %}
{#{% form_theme form ":FormTemplate:bootstrap.html.twig" %}#}

{% block body %}
    <div class="row">
        <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1 padShow">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    {% if need.imageNeeds != NULL %}
                        <img src="{{ app.request.basepath }}/uploads/{{ need.imageNeeds }}" alt="photo_logo" class="center-block img-responsive imgShow"/>
                    {% else %}
                        <img src="{{ asset ('bundles/booster/img/nophoto.png')}}" alt="photo_logo" class="center-block img-responsive imgShow"/>
                    {% endif %}
                </div>
                <div class="col-md-6 col-xs-12">
                    <h1>{{ need.title }}</h1>
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <ul>
                                <li><span>Nom de la Commune :</span> {{ need.town }}</li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <ul>
                                <li><span>Code Postal :</span> {{ need.cp }}</li>
                            </ul>
                        </div>
                        <div class="col-sm-12 col-xs-12">
                            <ul>
                                <li><span>Description du Besoin :</span><p> {{ need.description }}</p></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="row">
            <div class="col-xs-offset-3 col-xs-2">
                <a href="{{ path('citizen_listNeed') }}" class="btn center-block Button">Retour Ã  la liste</a>
            </div>
             <div class="col-xs-offset-2 col-xs-2 col-xs-offset-3">
                <a href="{{ path('booster_citizen',{'id' : need.id}) }}" class="btn center-block Button">Consulter le profil</a>
            </div>
    </div>
{% endblock %}
