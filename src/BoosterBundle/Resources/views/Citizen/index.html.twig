{% extends "base.html.twig" %}

  {% block body %}
      <div class="row">
          <section class="col-sm-offset-1 col-sm-10 col-xs-12 backWhite sec1">
              <div class="row">
                  <div class="col-md-6 col-xs-12">
                      {% if user.imageIdentity != NULL %}
                          <img src="{{ app.request.basepath }}/uploads/{{ user.imageIdentity }}" alt="photo_logo" class="center-block img-responsive pic1citiz constraint"/>
                      {% else %}
                          <img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo_logo" class="center-block img-responsive pic1citiz"/>
                      {% endif %}
                  </div>

                  <div class="col-md-6 col-xs-12">
                      <h1>{{ user.lastname }}</h1>
                      <div class="row identity">
                          <div class="col-sm-6 col-xs-12">
                              <ul>
                                  <li class="state"><span>Statut :</span> {{ user.statusCitizen }}</li>
                                  <li><span>Adresse :</span>{{ user.address}}</li>
                                  <li><span>Code Postal :</span> {{ user.cp }}</li>
                                  <li><span>Commune :</span> {{ user.town }}</li>
                                  <li><span>Adresse Mail :</span> {{ user.email }}</li>
                                  <li><span>Categorie :</span> {{ user.category }}</li>
                              </ul>
                          </div>
                      </div>
                  </div>
                  <div class="col-xs-offset-11">
                      <a href="{{ path('citizen_editUser', {'id': user.id}) }}') }}">
                          <span class="glyphicon glyphicon-pencil btn-lg"></span >
                      </a>
                  </div>
              </div>
          </section>
      </div>

      <div class="row">
          <div class="col-sm-offset-1 col-sm-10">
              <div class="row flexMap">
                  <section class="col-sm-6 col-xs-12 backWhite sec2 padShow">
                      <div class="row">
                          <div class="col-md-4 col-sm-12">
                              <ul class="ulBorder">
                                  {% if user.imageDescription1 != NULL %}
                                      <li><img src="{{ app.request.basepath }}/uploads/{{ user.imageDescription1 }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% else %}
                                      <li><img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% endif %}

                                  {% if user.imageDescription2 != NULL %}
                                      <li><img src="{{ app.request.basepath }}/uploads/{{ user.imageDescription2 }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% else %}
                                      <li><img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% endif %}

                                  {% if user.imageDescription3 != NULL %}
                                      <li><img src="{{ app.request.basepath }}/uploads/{{ user.imageDescription3 }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% else %}
                                      <li><img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo" class="pitureMini img-responsive center-block"/></li>
                                  {% endif %}
                              </ul>
                          </div>
                          <div class="col-md-8 col-sm-12">
                              <h2 class="mediaTitle">pourquoi je suis dynamique ?</h2>
                              <p>{{ user.description }}</p>
                          </div>
                      </div>
                      <div>
                          <a href="{{ path('citizen_editDescription', {'id': user.id}) }}') }}"><span class="col-xs-offset-11 glyphicon glyphicon-pencil btn-lg"></span ></a>
                      </div>
                  </section>


                  <section class=" hidden-xs col-sm-5 col-xs-12 backWhite secPad1" onload="initialize()">
                      <h2>localisation</h2>
                      {% if user.lat != NULL %}
                          <div id="map" class="center-block"></div>
                      {% else %}
                          <p class="nobody"> Si vous voulez voir les acteurs et les mairies dynamiques dans votre secteur. Mettez votre adresse dans votre profil.</p>
                      {% endif %}
                  </section>
              </div>
          </div>
      </div>

      <!------------------------------------- MATCHING ----------------------------------------------------->

      <div class="row">
          <div class="col-sm-offset-1 col-sm-10 block1">
              <div class="row">
                  <section class="col-sm-6 col-xs-12 backWhite margeMobile secPad2 padShow2">
                      <h3 class="title">Mes offres</h3>
                      <hr class="ligneHr">
                      <h4 class="underTitle italTitre">Ce que je propose...</h4>
                      <div class="padShow">
                          {% if offers == NULL %}
                              <p class="nobody">Pour créer une offre cliquez sur<span class="glyphicon glyphicon-plus btn-lg"></span ></p>
                          {% else %}
                              {% for offer in offers %}
                                  <ul>
                                      <li>
                                          <div class="row">
                                              <a href="{{ path('citizen_showOffer',{'id' : offer.id}) }}" id="lienListe">
                                                  {% if offer.imageOffer != NULL %}
                                                      <img src="{{ app.request.basepath }}/uploads/{{ offer.imageOffer }}" alt="photo_offre" class=" col-xs-2">
                                                  {% else %}
                                                      <img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo_offre" class=" col-xs-2">
                                                  {% endif %}
                                                  <div class="col-xs-8">
                                                      <span>{{ offer.title }}</span>
                                                      <p>{{ offer.description[:300] }} ...</p>
                                                  </div>
                                              </a>
                                              <div class="col-xs-1">
                                                  <a href="{{ path('citizen_editOffer', { 'id': offer.id }) }}"><span class="glyphicon glyphicon-pencil btn-lg"></span ></a>
                                                  <a data-toggle="modal" href="#deleteOffer"><span class="glyphicon glyphicon-remove btn-lg"></span ></a>

                                              </div>
                                          </div>
                                      </li>
                                      <hr>

                                  </ul>
                              {% endfor %}
                          {% endif %}
                      </div>
                      <div class="row">
                          <a href="{{ path('citizen_newOffer') }}" class="col-xs-offset-11"> <span class="glyphicon glyphicon-plus btn-lg"></span ></a>
                      </div>
                  </section>

                  <section class="col-sm-5 col-xs-12 backWhite secPad3 padShow2">
                      <h3 class="title">Mes matching</h3>
                      <hr class="ligneHr">
                      <h4 class="underTitle italTitre">Qui puis-je aider ?</h4>
                      <form>
                          <div class="form-group">
                              <input class="form-control ombreMoteur2" placeholder="Rechercher..." type="text" id="search2"> <!-- id return in recherchejQuery.js -->
                          </div>
                      </form>
                      <div class="padShow">
                          {% if needsall == NULL %}
                              <p class="nobody">Aucun résultat</p>
                          {% else %}
                              {% for needsall in needsall %}
                                  <ul>
                                      <li>
                                          <div class="row filtre2"> <!-- filtre2 return in recherchejQuery.js -->
                                              <a href="{{ path('citizen_showNeeds',{'id' : needsall.id}) }}" id="lienListe">
                                                  {% if needsall.imageNeeds != NULL %}
                                                      <img src="{{ app.request.basepath }}/uploads/{{ needsall.imageNeeds }}" alt="photo_offre" class=" col-xs-2">
                                                  {% else %}
                                                      <img src="{{ asset('bundles/booster/img/nophoto.png') }}" alt="photo_offre" class=" col-xs-2">
                                                  {% endif %}
                                                  <div class="col-xs-8">
                                                      <span>{{ needsall.title }}</span>
                                                      <p>{{ needsall.description[:300] }} ...</p>
                                                  </div>
                                              </a>
                                          </div>
                                      </li>
                                      <hr>

                                  </ul>
                              {% endfor %}
                          {% endif %}
                      </div>
                  </section>
              </div>
          </div>
      </div>

      <div class="row">
          <div class="col-sm-offset-1 col-sm-10 block1">
              <div class="row">
                  <section class="col-sm-6 col-xs-12 backWhite margeMobile secPad2 padShow2">
