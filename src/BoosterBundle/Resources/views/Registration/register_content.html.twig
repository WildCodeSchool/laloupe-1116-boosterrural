{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form ':form_template:bootstrap.html.twig' %}

{% block body %}
<div class="background_form_citizen">
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <br/>
    <div class="btn_regist_citizen">
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-default btn_form_citizen" />
    </div>
{{ form_end(form) }}
</div>
{% endblock body %}
