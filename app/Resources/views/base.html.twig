    <div class="col-md-3 col-xs-12">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input style="display: none" type="text" id="username" name="_username" value="boucherie@mail.fr" required="required"/>
            <input style="display: none"  type="password" id="password" name="_password" value="123" required="required"/>
            <input type="submit" id="_submit" name="_submit" value="Se connecter en acteur" class="btn center-block Button"/>
        </form>
    </div>
    <div class="col-md-3 col-xs-12">
        <a class="btn center-block Button" style="width: 50%" href="{{ path('fos_user_security_logout') }}">
            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
