        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input style="display: none" type="text" id="username" name="_username" value="admin@mail.fr" required="required"/>
            <input style="display: none"  type="password" id="password" name="_password" value="123" required="required"/>
            <input type="submit" id="_submit" name="_submit" value="Se connecter en admin" class="btn center-block Button"/>
